@{
    ViewData["Title"] = "Home Page";
}

@* Modal para login *@

<div id="fade-login" class="hide"></div>
<div id="modal-login" class="hide">
    <div class="modal-header">
        <h2>Entre com suas credenciais</h2>
        <button id="close-modal-login">Fechar</button>
    </div>
    <div class="modal-body">
        <label for="name">E-mail</label>
        <input type="email" placeholder="Digite seu e-mail"> <br>
        <label for="name">Senha</label>
        <input type="password" placeholder="Insira sua senha"> <br>
        <button class="btnModal">Logar</button>
    </div>
</div>

@* Modal para cadastro *@

<div id="fade-cadastro" class="hide"></div>
<div id="modal-cadastro" class="hide">
    <div class="modal-header">
        <h2>Novo usuário</h2>
        <button id="close-modal-cadastro">Cancelar</button>
    </div>
    <div class="modal-body">
        <form method="post">
            <label for="name">Nome</label>
            <input type="text" name="nome" id="nome" placeholder="Digite seu nome" required> <br>
            <label for="email">E-mail</label>
            <input type="email" name="email" id="email" placeholder="Digite seu e-mail" required> <br>
            <label for="senha">Senha</label>
            <input type="password" name="senha" id="senha" placeholder="Insira sua senha" required> <br>          
            <label for="cpf">CPF</label>
            <input type="text" name="cpf" id="cpf" placeholder="Digite seu CPF" oninput="mascaraCpf(this)" required> <br>
            <label for="cep">CEP</label>
            <input type="text" name="cep" id="cep" placeholder="Digite seu CEP" maxlength="8" required> <br>
            <label for="logradouro">Logradouro</label>
            <input type="text" name="logradouro" id="logradouro" placeholder="" required> <br>
            <label for="numero">Nº</label>
            <input type="number" name="numero" id="numero" placeholder="" required> <br>
            <label for="complemente">Complemento</label>
            <input type="text" name="complemento" id="complemento" placeholder=""> <br>
            <label for="bairro">Bairro</label>
            <input type="text" name="bairro" id="bairro" placeholder="" required> <br>
            <label for="cidade">Cidade</label>
            <input type="text" name="cidade" id="cidade" placeholder="" required> <br>
            <button class="btnModal" asp-controller="Home" asp-action="Salvar">Cadastrar</button>
        </form>   
    </div>
</div>

